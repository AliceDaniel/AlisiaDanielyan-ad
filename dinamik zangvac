#include <iostream>

using namespace std;

int main()
{
    const int n=5;
    int a[n]={0};
    for(int i=0;i<n;++i)
{
    cin>>a[i];
}
for(int i=0;i<n;++i)
{
    if(a[i]>a[i+1])
    {
        cout<<"ubivayushaya";
        break;
    }
    else if(a[i]<a[i+1])
    {
        cout<<"vozrostayushaya";
        break;
    }
    else
    {
        cout<<"neitral";
        break;
    }
    
}
    return 0;
}
