#include <iostream>

using namespace std;

int main()
{
    const int n=5;
    int arr[n]={1,2,3,4,5};
    int k;
    cin>>k;
    bool a=false;
    
    for(int i=0;i<n;i++){
        if(arr[i]==k){
     a=true; 
     break;
    }
    }
    if( a){
        cout<<"aydpisi tiv ka";
    }else{
        cout<<"chka";
    }
    
    return 0;
}
